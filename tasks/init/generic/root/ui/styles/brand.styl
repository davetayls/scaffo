/** ==> headers
    1. top margins align to baseline
    2. first-child works in ie7
    ---------------------------------------*/
h1                  { font-size-rem: 20; margin: 0; }
h2                  { font-size-rem: 18; margin: 0; }
h3                  { font-size-rem: 16; margin: 0; }
h4                  { font-size-rem: 16; margin: 0; }
h5                  { font-size-rem: 16; margin: 0; }
h6                  { font-size-rem: 16; margin: 0; }

h1,
h2,
h3,
h4,
h5,
h6                  { margin-top: (2px * $baseline); } /* 1 */

h1:first-child,
h2:first-child,
h3:first-child,
h4:first-child,
h5:first-child,
h6:first-child      { margin-top: 0; }                /* 2 */

/** ==> links
    ---------------------------------------*/
a            { text-decoration: underline; }
a, a:link    { color: $color--accent; -webkit-tap-highlight-color: desaturate($color--accent, 30%); }
a:visited    { color: darken($color--accent, 30); }

a:focus,
a:hover,
a:active     { text-decoration: none;   }

/*
    => fonts
--------------------------------------------------*/
body,
select,
input,
textarea {
    font-family: Arial, Helvetica, "Nimbus Sans L", "Free Sans", Sans-Serif;
}